<div class="card mb-3">
  <div class="card-body">
    <div class="media">
      <div class="mr-3">
        <% if article.image.present? %>
          <%= image_tag(article.image.url, height: 100) %>
        <% end %>
      </div>
      <div class="media-body">
        <h5 class="mt-0"><%= article.title %></h5>
        <p class="card-text"><%= article.body.truncate(100) %></p>
        <%= link_to '', public_article_path(article), class: 'card-link stretched-link' %>
      </div>
    </div>
  </div>
</div>

