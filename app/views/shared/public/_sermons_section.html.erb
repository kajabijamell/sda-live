<div class="row mb-4"> 
  <%= render 'shared/public/section_heading', title: 'Latest Sermons', link: public_sermons_path %>
  <% if @sermons.length > 0 %>
    <div class="col-12">
      <% @sermons.each do |sermon| %>
        <%= render 'shared/public/simple_sermon_card', sermon: sermon  %>
      <% end %>
    </div>
  <% else %>
    <div class="col-12 mb-4">
      <div class="card p-3">
        <p class="card-text">No sermons at this time.</p>
      </div>
    </div>
  <% end %>
</div>
