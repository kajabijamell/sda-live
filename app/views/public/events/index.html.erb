<div class="row">
  <div class="col-12">
    <h3>Events</h3>
    <table class="table table-responsive">
      <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Start datetime</th>
        <th>End datetime</th>
        <th>Location</th>
        <th>Address</th>
        <th>Description</th>
        <th>Link</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>
            <% if event.image.present? %>
              <%= image_tag(event.image.url, height: 100) %>
            <% end %>
          </td>
          <td><%= event.name %></td>
          <td><%= event.start_datetime %></td>
          <td><%= event.end_datetime %></td>
          <td><%= event.location %></td>
          <td><%= event.address %></td>
          <td><%= event.description %></td>
          <td><%= event.link %></td>
          <td><%= link_to 'Show', public_event_path(event) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>