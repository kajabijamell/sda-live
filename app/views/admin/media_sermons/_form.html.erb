    <div class="actions">
      <%= form.submit 'Save', class: 'btn btn-primary px-4' %>
      <%= link_to 'Cancel', admin_media_sermons_path, class: 'btn btn-outline-primary px-4 ml-md-4' %>
    </div>
  </div>
  
  <% end %>
</div>
