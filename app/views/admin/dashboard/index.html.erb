<%= render partial: "shared/header", locals: { 
  title: "Dashboard",
  icon: "fa-home"  } 
%>

<div class="container-fluid mt-n20">
  <div class="card p-4 mb-5">
    <div class="card-body">
      <div class="col-xxl-4 col-xl-12">
        <div class="row align-items-center">
            <div class="col-6 m-auto">
                <div class="text-center px-4 mb-4 mb-xl-0 mb-xxl-4">
                    <h1 class="text-primary">Welcome Back, <%= current_user.fname %>!</h1>
                    <p class="text-gray-700 mb-0">Stay tuned, more features are on the way! Do you have an idea for a new feature? <a href="">click here</a> to submit your idea.</p>
                </div>
            </div>
        </div>
        <div class="row mt-3 text-center">
          <div class="col-12 mb-2">
            <h4>Consumed Stream Size (in Hours):</h4>
            <div><%= @asset_duration %> <%= stream_size_limit %></div>
          </div>
          <div class="col-12 mb-2">
            <h4>Consumed Viewer Count:</h4>
            <div><%= @visitors %> <%= viewer_count_limit %></div>
          </div>
          <div class="col-12 mb-2">
            <h4>Consumed Live Stream:</h4>
            <div><%= @subscription_profile.consumed_live_streams %> <%= live_streams_limit %></div>
          </div>
          <div class="col-12 mb-2">
            <h4>Consumed Targets:</h4>
            <div><%= @subscription_profile.consumed_targets %> <%= targets_limit %></div>
          </div>
          <div class="col-12 mb-2">
            <h4>Consumed Video Storage:</h4>
            <div><%= (@subscription_profile.consumed_video_storage / 1024 / 1024 / 1024.0).round(3) %> GB <%= video_storage_limit %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
