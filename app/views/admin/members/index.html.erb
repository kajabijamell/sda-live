<%= render partial: 'shared/simple_page_header', locals: {
  title: 'Members',
  btn_text: 'New Member',
  icon: 'fa-user',
  link: new_admin_member_path } %>
<div class="container-fluid mt-n20">
  <div class="card ht pl-4 pr-4 pt-4 mb-5">
    <div class="row">
      <div class="col-12">
        <h3>Members</h3>
        <div class="mt-3">
          <div class="tbl-header">
            <div class="table-responsive">
              <table class="table table-borderless mb-0">
                <thead>
                  <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Profile Picture</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @admin_members.each do |admin_member| %>
                    <tr>
                      <td><%= admin_member.fname %></td>
                      <td><%= admin_member.lname %></td>
                      <td><%= admin_member.email %></td>
                      <td>
                        <% if admin_member.profile_picture.present? %>
                          <%= image_tag(admin_member.profile_picture.url, height: 100) %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to admin_member_path(admin_member) do %>
                          <i class="fas fa-eye indigo-text"></i>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to edit_admin_member_path(admin_member) do %>
                          <i class="fas fa-edit indigo-text"></i>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to admin_member_path(admin_member), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fas fa-trash-alt indigo-text"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
