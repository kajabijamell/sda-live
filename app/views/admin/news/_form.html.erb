<div class="row">
  <div class="col-12">
    <%= form_with(model: admin_news, local: true, validate: true) do |form| %>
      <div class="form-group">
        <%= form.label :image %>
        <% if admin_news.image.attached? %>
          <%= image_tag(url_for(admin_news.image.variant(resize: 100))) %>
        <% end %>
        <%= form.file_field :image, class: 'form-control', accept: 'image/*'  %>
      </div>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control', style: 'resize: none;' %>
      </div>

      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

