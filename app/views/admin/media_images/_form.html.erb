<div class="row">
  <div class="col-12">
    <%= form_with(model: admin_media_image, local: true) do |form| %>

      <div class="form-group">
        <%= form.label :image %>
        <% if admin_media_image.image.attached? %>
          <%= image_tag(url_for(admin_media_image.image.variant(resize: 100))) %>
        <% end %>
        <%= form.file_field :image, accept: 'image/*'  %>
      </div>

      <div class="form-group">
        <%= form.label :caption %>
        <%= form.text_field :caption, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>