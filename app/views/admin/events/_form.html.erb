<div class="row">
  <div class="col-12">
    <%= form_with(model: admin_event, local: true, validate: true) do |form| %>
      <div class="form-group">
        <%= form.label :image %>
        <% if admin_event.image.attached? %>
          <%= image_tag(url_for(admin_event.image.variant(resize: 100))) %>
        <% end %>
        <%= form.file_field :image, class: 'form-control', accept: 'image/*'  %>
      </div>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :start_datetime %>
        <%= form.datetime_select :start_datetime, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :end_datetime %>
        <%= form.datetime_select :end_datetime, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :location %>
        <%= form.text_area :location, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_area :address, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :link %>
        <%= form.text_field :link, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
