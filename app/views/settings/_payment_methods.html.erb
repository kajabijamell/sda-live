<div class="card card-header-actions mb-4">
  <div class="card-header"> Payment Methods
    <%= link_to 'Add New Card', new_admin_payment_method_path, class: "btn btn-sm btn-primary #{"disabled" if !@subscription_profile&.active }" %>
  </div>
  <div class="card-body">
    <% if @cards.length > 0 %>
      <% @cards.each do |card, index| %>
         <% if index == @cards.size - 1 %>
          <%= render 'card_row', card: card, last: true %>
        <% else %>  
          <%= render 'card_row', card: card %>
        <% end %>
      <% end %>
    <% else %>
      <p>No cards</p>
    <% end %>
  </div>
</div>
 