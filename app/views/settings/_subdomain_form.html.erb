<div class="row">
  <div class="col-12">
    <%= form_for current_user, url: admin_update_my_subdomain_path, validate: true do |c| %>
      <h4>Subdomain</h4>
      <div class="form-group">
        <%= c.label :subdomain %>
        <%= c.text_field :subdomain, value: current_user.subdomain, class: 'form-control'  %>
        <small>Changing this will log you out and you need to login into your new domain.</small>
      </div>
      <%= c.submit 'Save', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>